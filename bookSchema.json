{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "book"
    ],
    "properties": {
        "book": {
            "type": "object",
            "default": {},
            "title": "The book Schema",
            "required": [
                "isbn",
                "amazon_url",
                "author",
                "language",
                "pages",
                "publisher",
                "title",
                "year"
            ],
            "properties": {
                "isbn": {
                    "type": "string",
                    "default": "",
                    "title": "The isbn Schema",
                    "examples": [
                        "2033490"
                    ]
                },
                "amazon_url": {
                    "type": "string",
                    "default": "",
                    "title": "The amazon_url Schema",
                    "examples": [
                        "https://www.amazon.com/book"
                    ]
                },
                "author": {
                    "type": "string",
                    "default": "",
                    "title": "The author Schema",
                    "examples": [
                        "Hamond"
                    ]
                },
                "language": {
                    "type": "string",
                    "default": "",
                    "title": "The language Schema",
                    "examples": [
                        "ENG"
                    ]
                },
                "pages": {
                    "type": "integer",
                    "default": 0,
                    "title": "The pages Schema",
                    "examples": [
                        123
                    ]
                },
                "publisher": {
                    "type": "string",
                    "default": "",
                    "title": "The publisher Schema",
                    "examples": [
                        "Reynolds Inc"
                    ]
                },
                "title": {
                    "type": "string",
                    "default": "",
                    "title": "The title Schema",
                    "examples": [
                        "A differing view"
                    ]
                },
                "year": {
                    "type": "integer",
                    "default": 0,
                    "title": "The year Schema",
                    "examples": [
                        1988
                    ]
                }
            },
            "examples": [
                {
                    "isbn": "2033490",
                    "amazon_url": "https://www.amazon.com/book",
                    "author": "Hamond",
                    "language": "ENG",
                    "pages": 123,
                    "publisher": "Reynolds Inc",
                    "title": "A differing view",
                    "year": 1988
                }
            ]
        }
    },
    "examples": [
        {
            "book": {
                "isbn": "2033490",
                "amazon_url": "https://www.amazon.com/book",
                "author": "Hamond",
                "language": "ENG",
                "pages": 123,
                "publisher": "Reynolds Inc",
                "title": "A differing view",
                "year": 1988
            }
        }
    ]
}